<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/tools_ib_navigate_to_root_directory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:src="@drawable/ic_storage_black_32dp"
            android:contentDescription="@string/filestore_tools_navigate_to_root_directory"
            />
        <ImageView
            android:id="@+id/tools_ib_create_new_directory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:src="@drawable/ic_create_new_folder_black_32dp"
            android:contentDescription="@string/filestore_tools_create_new_directory"
            />
        <ImageView
            android:id="@+id/tools_ib_upload_file"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/ic_file_upload_black_32dp"
            android:contentDescription="@string/filestore_tools_upload_button"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tools"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

</RelativeLayout>